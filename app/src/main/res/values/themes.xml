<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RentCar" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/verde_contraste</item>
        <item name="colorPrimaryVariant">@color/verde_contraste</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/verde_contraste</item>
        <item name="colorSecondaryVariant">@color/verde_contraste</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:width">312dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">23dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="ButtonPrimary.Toggle">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/verde_agua</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="ButtonPrimary.Toggle2">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="ButtonPrimary.Toggle3">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    </resources>